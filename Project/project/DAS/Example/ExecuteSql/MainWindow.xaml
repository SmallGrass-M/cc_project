<Window x:Class="ExecuteSql.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExecuteSql"
        mc:Ignorable="d"
        Title="sql正确性验证" Height="500" Width="660" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="410"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" x:Name="tbx_sql" HorizontalAlignment="Center" Height="390" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="620" Margin="0,10,0,0" GotFocus="tbx_sql_GotFocus" />
        <Button Grid.Row="1" Width="50" Height="25" Click="Button_Click">验证</Button>
    </Grid>
</Window>
